<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:top="1.2dp" android:left="1.2dp" >
   //Shadow shape
    <shape android:shape="rectangle">
        <size
            android:width="24dp"
            android:height="24dp" />
        <gradient android:angle="180"
            android:endColor="#66000000" android:startColor="#12000000" />
        <corners android:radius="2dp"/>
    </shape>
</item>
<item  android:bottom="1dp" android:right="1dp">
    //Rectangle shape
    <shape android:shape="rectangle">
        <size
            android:width="24dp"
            android:height="24dp" />
        <solid android:color="@color/fb_blue_main_dark" />
        <corners android:radius="4dp"/>
    </shape>
</item>
</layer-list>