<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/work_white">

    <TextView
        android:id="@+id/showNumbButton"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_user_answer"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="48" />

    <TextView
        android:id="@+id/adapterTextNumeration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="4dp"
        android:textStyle="italic"
        tools:text="01." />

    <TextView
        android:textColor="@color/work_blue"
        android:visibility="invisible"
        android:id="@+id/adapterTextCoincidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/showNumbButton"
        android:layout_alignRight="@+id/showNumbButton"
        android:layout_marginRight="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="answers" />

</RelativeLayout>