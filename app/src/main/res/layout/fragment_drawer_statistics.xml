<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/drawer_statistics"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Пользователь:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Дата:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Всего элементов:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Ошибок:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Время:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Индекс запоминания:"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statisticsFieldUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Rouge" />

        <TextView
            android:id="@+id/statisticsFieldDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="07.02.15 - 03:27:18" />

        <TextView
            android:id="@+id/statisticsFieldElements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="100" />

        <TextView
            android:id="@+id/statisticsFieldMistakes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="10 (10%)" />

        <TextView
            android:id="@+id/statisticsFieldTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="376 сек (10,32 элемент)" />

        <TextView
            android:id="@+id/statisticsFieldMemoryIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/fb_text_white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Ошибок больше 10%" />

    </LinearLayout>

</LinearLayout>