<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exerciseLineContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/equationAnswerFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/exercise_block"
        android:ems="2"

        android:gravity="center_horizontal"
        android:hint="|"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mathEquationStringFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/equationAnswerFirst"
        android:gravity="end"
        android:textColor="@color/work_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="76 + 11 = " />

    <EditText
        android:id="@+id/equationAnswerSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/equationAnswerFirst"
        android:layout_marginRight="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/exercise_block"
        android:ems="2"
        android:gravity="center_horizontal"
        android:hint="|"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mathEquationStringSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equationAnswerFirst"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/equationAnswerFirst"
        android:gravity="end"
        android:textColor="@color/work_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="6 + 4 = " />

    <EditText
        android:id="@+id/equationAnswerThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/equationAnswerSecond"
        android:layout_marginRight="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/exercise_block"
        android:ems="2"
        android:gravity="center_horizontal"
        android:hint="|"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mathEquationStringThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equationAnswerSecond"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/equationAnswerFirst"
        android:gravity="end"
        android:textColor="@color/work_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="102 + 11 = " />

    <EditText
        android:id="@+id/equationAnswerFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/equationAnswerThird"
        android:layout_marginRight="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/exercise_block"
        android:ems="2"
        android:gravity="center_horizontal"

        android:hint="|"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mathEquationStringFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equationAnswerThird"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/equationAnswerFirst"
        android:gravity="end"
        android:textColor="@color/work_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="12 + 50 = " />

    <EditText
        android:id="@+id/equationAnswerFifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/equationAnswerFourth"
        android:layout_marginRight="96dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/exercise_block"
        android:ems="2"
        android:gravity="center_horizontal"
        android:hint="|"
        android:inputType="number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mathEquationStringFifth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/equationAnswerFourth"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/equationAnswerFifth"
        android:gravity="end"
        android:textColor="@color/work_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="46 + 71 = " />
    </RelativeLayout>


    <Button
        android:id="@+id/checkUsersEquationAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:background="@drawable/selector_input_numb"
        android:text="Проверить"
        android:textStyle="bold" />


</RelativeLayout>