<?xml version="1.0" encoding="utf-8"?>
<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containerMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:tag="This"
        android:layout_margin="1.4dp"
        android:id="@+id/drawerMainActivity"
        android:name="com.redgrue.pm.fragments.ChooseMemoryDrawerFragment"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:layout="@layout/fragment_drawer_choose_memory" />

</android.support.v4.widget.DrawerLayout>
