<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/work_white">

    <GridView
        android:id="@+id/AnswersGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/mainLayout"
        android:layout_gravity="center_horizontal"
        android:columnWidth="80dp"
        android:gravity="center_horizontal"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="2dp" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_alignParentTop="true"
            android:id="@+id/hideKeyboard"
            android:contentDescription="@null"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_weight="2"
            android:background="@drawable/rectangle_blue"
            android:src="@android:drawable/ic_dialog_dialer" />


    <LinearLayout
        android:layout_toRightOf="@+id/hideKeyboard"
        android:id="@+id/inputAnswerLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inputAnswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:background="@drawable/input_container"
            android:gravity="center"
            android:hint="Число"/>

        <Button
            android:id="@+id/addUsersAnswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="8"
            android:background="@drawable/selector_input_numb"
            android:text="Добавить"
            android:textColor="@color/work_white"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_below="@+id/inputAnswerLayout"
        android:id="@+id/InputKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <Button
                    android:id="@+id/inputNumbOne"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="1"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbFour"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="4"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbSeven"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="7"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <Button
                    android:id="@+id/inputNumbTwo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="2"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbFive"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="5"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbEight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="8"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <Button
                    android:id="@+id/inputNumbThree"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="3"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbSix"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="6"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbNine"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="9"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <Button
                    android:id="@+id/inputNumbZero"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="0"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/inputNumbTwoZeros"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                    android:background="@drawable/selector_input_numb"
                    android:text="00"
                    android:textColor="@color/work_white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inputNumbDelete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="10"
                android:background="@drawable/selector_input_numb"

                android:text="DEL"
                android:textColor="@color/work_white"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
