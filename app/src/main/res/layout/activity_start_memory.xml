<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redgrue.pm.activity_ans">

    <FrameLayout
        android:id="@+id/containerStartMemoryActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/work_white" />

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.redgrue.pm.fragments.StatisticsDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        tools:layout="@layout/fragment_drawer_statistics" />

</android.support.v4.widget.DrawerLayout>
